<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomSeekBar" parent="android:Widget.Holo.Light.SeekBar">
        <item name="android:progressDrawable">@drawable/custom_seekbar_progress</item>
        <item name="android:indeterminateDrawable">@drawable/custom_seekbar_progress</item>
        <item name="android:thumb">@drawable/custom_seekbar_thumb_selector</item>
        <item name="android:background">@null</item>
        <item name="android:maxHeight">3dip</item>
        <item name="android:minHeight">3dip</item>
    </style>

</resources>
